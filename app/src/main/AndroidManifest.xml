<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testpullrefresh">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeAppBase.Light" >
        <activity
            android:name="com.example.testpullrefresh.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.testpullrefresh.activity.WebViewActivity"></activity>
        <activity android:name="com.example.testpullrefresh.activity.ListViewActivity"></activity>
        <activity android:name="com.example.testpullrefresh.activity.ScrollViewActivity"></activity>
        <activity android:name="com.example.testpullrefresh.activity.GridViewActivity"></activity>
        <activity android:name="com.example.testpullrefresh.activity.RealGridViewActivity"></activity>
    </application>

</manifest>
